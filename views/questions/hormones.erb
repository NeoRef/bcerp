<form action="" method="post">
    <div class="question row">
        <div class="large-12 columns">
            <div class="panel">
                <fieldset>
                    <legend>Have you used birth control for 10+ years or hormone replacement therapy for 5+ years?</legend>
                    <label><input type="radio" name="hormones" value="Yes" <% if @session.hormones == "Yes" %> checked="checked" <% end %>> Yes</label>
                    <label><input type="radio" name="hormones" value="No" <% if @session.hormones == "No" %> checked="checked" <% end %>> No</label>
                </fieldset>
                <div class="row">
                  <div id="risk-message" class="small-12 columns"></div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" name="next_question" value="screening" />
    <%= erb :actions_and_progress, :locals => { :suppress_back_button => false, :progress => @progress, :next_step => "screening", :previous_step => "plastic_or_glass" } %>
</form>