    <div class="question row">
        <div class="large-12 columns">
            <fieldset>
                <legend>Do you most often use personal care products like cosmetics with or without fragrances?</legend>
                <label><input type="radio" name="fragrances" value="With fragrances" <% if @session.fragrances == "With fragrances" %> checked="checked" <% end %>> With fragrances</label>
                <label><input type="radio" name="fragrances" value="Without fragrances" <% if @session.fragrances == "Without fragrances" %> checked="checked" <% end %>> Without fragrances</label>
            </fieldset>
        </div>
    </div>
    <div class="row">
        <%
            high_risk_message = "High risk message"
            low_risk_message = "Low risk message"
        %>
        <!--<div id="risk-message" class="small-12 columns">
            <% if @session.age > 45 %>
                <%= high_risk_message %>
            <% else %>
                <%= low_risk_message %>
            <% end %>
        </div>-->
    </div>
    <script>
        var riskMessage = {
            "high-risk": "<%= high_risk_message %>",
            "low-risk": "<%= low_risk_message %>"
        }
    </script>       
    <input type="hidden" name="next_question" value="plastic_or_glass" />
    <%= erb :actions_and_progress, :locals => { :suppress_back_button => false, :progress => @progress, :next_step => "plastic_or_glass", :previous_step => "days_of_exercise" } %>
</form>