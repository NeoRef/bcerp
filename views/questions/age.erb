<form action="" method="post">
    <div class="question row">
        <div class="large-12 columns">
            <div class="panel">
                <div class="row">
                    <div class="small-8 large-4 columns">
                        <label for="age" class="inline">How old are you?</label>
                    </div>
                    <div class="small-4 large-4 large-pull-4 columns">
                        <% if !params[:alt_age] %>
                            <select name="age" id="age">
                                <option value="">Age</option>
                                <% for age in 18..99 %>
                                    <option value="<%= age %>" <% if @session.age == age %> selected="selected" <% end %>><%= age %></option>
                                <% end %>
                            </select>
                        <% else %>
                            <select name="age" id="age">
                                <option value="">Age</option>
                                <% ["20s", "30s", "40s", "50s", "60s", "70s", "80s", "90s", "100+"].each do |age| %>
                                    <option value="<%= age %>" <% if @session.age == age %> selected="selected" <% end %>><%= age %></option>
                                <% end %>
                            </select>                                
                        <% end %>
                        <!-- TODO: persist the high risk/low risk messaging -->
                    </div>
                </div>
                <div class="row">
                    <div id="risk-message" class="small-12 columns"></div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" name="next_question" value="race_ethnicity" />
    <%= erb :actions_and_progress, :locals => { :suppress_back_button => true, :progress => @progress, :next_step => "race_ethnicity" } %>
</form>