<form action="" method="post">
    <div class="question row">
        <div class="large-12 columns">
            <h2>Question 7</h2>
            <fieldset>
                <legend>How would you describe your dietary habits?</legend>
                <label><input type="radio" name="diet_habits" data-risk="lower" value="Well-balanced, low-fat diet" <% if @session.diet_habits == "Well-balanced, low-fat diet" %> checked="checked" <% end %>> You eat a well-balanced, low-fat diet.</label>
                <label><input type="radio" name="diet_habits" data-risk="higher" value="Some high-fat and junk food" <% if @session.diet_habits == "Some high-fat and junk food" %> checked="checked" <% end %>> You eat some high-fat and junk food a few times a week.</label>
                <label><input type="radio" name="diet_habits" data-risk="higher" value="Regularly high-fat and junk food" <% if @session.diet_habits == "Regularly high-fat and junk food" %> checked="checked" <% end %>> You regularly eat high-fat and junk food.</label>
            </fieldset>  
        </div>
    </div>
    <div class="row">
        <%
            high_risk_message = 'Regardless of your height and weight, eating a diet high in fruits and vegetables (5 servings of each per day) has been shown to be protective against developing breast cancer. <a href="/resources/more_info">More information &rsaquo;</a>'
            low_risk_message = 'Good! Eating a diet high in fruits and vegetables (5 servings of each per day) has been shown to be protective against developing breast cancer. <a href="/resources/more_info">More information &rsaquo;</a>'
        %>
        
            <div id="risk-message" class="small-12 columns">
            <% if !@session.diet_habits.nil? %>
                <% if @session.diet_habits == "Well-balanced, low-fat diet" %>
                    <p>
                        <span class="lower-risk">Lower risk:</span> <%= low_risk_message %>
                    </p>
                <% else %>
                    <p>
                        <span class="higher-risk">Higher risk:</span> <%= high_risk_message %>
                    </p>
                <% end %>
            <% end %>
            </div>
    </div>
    <script>
        var riskMessage = {
            "higherRisk": '<p><span class="higher-risk">Higher risk:</span> <%= high_risk_message %></p>',
            "lowerRisk": '<p><span class="lower-risk">Lower risk:</span> <%= low_risk_message %></p>'
        }
    </script>    
    <input type="hidden" name="next_question" value="fresh_or_frozen" />
    <%= erb :actions_and_progress, :locals => { :suppress_back_button => false, :progress => @progress, :next_step => "fresh_or_frozen", :previous_step => "bmi" } %>
</form>