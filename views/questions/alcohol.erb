<form action="" method="post">
    <div class="question row">
        <div class="large-12 columns">
            <h2>Question 10</h2>
            <fieldset>
                <legend>Do you frequently have more than 8 alcoholic drinks per week?</legend>
                <label><input type="radio" name="alcohol" value="Yes" data-risk="higher" <% if @session.alcohol == "Yes" %> checked="checked" <% end %>> Yes</label>
                <label><input type="radio" name="alcohol" value="No" data-risk="lower" <% if @session.alcohol == "No" %> checked="checked" <% end %>> No</label>
            </fieldset>
        </div>        
    </div>
    <div class="row">
        <%
            high_risk_message = 'Having one or more drinks per days is thought to increase your risk for breast cancer. The risk for women who drink more than one per day is 1.5 times higher than for nondrinkers. <a href="/resources/more_info">More information &rsaquo;</a>'
            low_risk_message = 'Good! Having one or more drinks per days is thought to increase your risk for breast cancer. <a href="/resources/more_info">More information &rsaquo;</a>'
        %>
        
            <div id="risk-message" class="small-12 columns">
            <% if !@session.alcohol.nil? %>
                <% if @session.alcohol == "No" %>
                    <p>
                        <span class="lower-risk">Lower risk:</span> <%= low_risk_message %>
                    </p>
                <% else %>
                    <p>
                        <span class="higher-risk">Higher risk:</span> <%= high_risk_message %>
                    </p>
                <% end %>
            <% end %>
            </div>
    </div>
    <script>
        var riskMessage = {
            "higherRisk": '<p><span class="higher-risk">Higher risk:</span> <%= high_risk_message %></p>',
            "lowerRisk": '<p><span class="lower-risk">Lower risk:</span> <%= low_risk_message %></p>'
        }
    </script>   
    <input type="hidden" name="next_question" value="days_of_exercise" />
    <%= erb :actions_and_progress, :locals => { :suppress_back_button => false, :progress => @progress, :next_step => "days_of_exercise", :previous_step => "charred_meat" } %>
</form>