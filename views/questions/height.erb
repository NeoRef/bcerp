<form action="" method="post">
    <div class="question row">
        <div class="large-12 columns">
            <div class="panel">
                <div class="row">
                    <div class="small-8 large-4 columns">
                        <label for="height" class="inline">How tall are you (in feet and inches)?</label>
                    </div>
                    
                    <div class="small-4 large-4 large-pull-4 columns">
                        <select id="height" name="height">
                            <option value=""></option>
                            <% for feet in 3..7 %>
                              <% for inches in 0..12 %>
                                <% value = feet * 12 + inches %>
                                <% if(inches == 0) %>
                                  <option value="<%=value%>" <% if @session.height == value %> selected="selected" <% end %> ><%="#{feet}&#039;"%></option>
                                <% else %>
                                  <option value="<%=value%>" <% if @session.height == value %> selected="selected" <% end %>><%="#{feet}&#039; #{inches}&#34;"%></option>
                                <% end %>
                              <% end %>
                            <% end %>                
                        </select>
                    </div>
                </div>
                <div class="row">
                  <div id="risk-message" class="small-12 columns"></div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" name="next_question" value="weight" />
    <%= erb :actions_and_progress, :locals => { :suppress_back_button => false, :progress => @progress, :next_step => "weight", :previous_step => "relatives" } %>
</form>