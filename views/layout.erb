				<li <% if @active == "resources" %>class="active"<% end %>><a href="/resources">Resources</a></li>
			</ul>
			<div class="row">
			  &copy; The University of North Carolina at Chapel Hill. All Rights Reserved.
			</div>
		</footer>
<% end %>		
		<nav id="sticky-nav">
			<ul>
				<li>
					<a href="/resources">
						<img src="/images/resources.png" alt="Play">
						Resources
						<p class="hide-for-small-only">
							Find more information about how to lower your breast cancer risk.
						</p>
					</a>					
				</li>
				<li>
					<a href="/stories">
						<img src="/images/videos.png" alt="Play">
