	<body>
		<header>
		  <nav class="top-bar" data-topbar>
			<ul class="title-area">
				<li class="name">
				  <h1><a href="/"><img id="logo" src="/images/bcerp-logo.png" alt="BCERP Logo" /> Breast Health Guide</a></h1>
				</li>
			  <!--<li class="toggle-topbar menu-icon"><a href="#menu"><span>Menu</span></a></li>-->
			</ul>
<% if false %>			
			<section class="top-bar-section">
			  <ul id="menu" class="right">
				<!--<li <% if @active == "home" %>class="active"<% end %>><a href="/">Home</a></li>-->
				<li <% if @active == "questionnaire" %>class="active"<% end %>>
					<a href="/questionnaire">
						<% if @session.progress > 0 %>
							Continue Questionnaire
						<% else %>
							Find Out Your Risk
						<% end %>
					</a>
				</li>
				<!--<li <% if @active == "resources" %>class="active"<% end %>><a href="/resources">Resources</a></li>-->
			  </ul>
			</section>
<% end %>
		  </nav>
		</header>
		<article id="article">
			<%= yield %>
		</article>

<% if false #cheap comment for now
%>
		<footer>
			<ul id="secondary-menu">				
				<li <% if @active == "home" %>class="active"<% end %>><a href="/">Home</a></li>
